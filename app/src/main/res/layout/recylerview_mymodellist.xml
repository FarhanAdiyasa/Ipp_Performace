<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtNamaPekerjaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Pemrograman"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnEditPekerjaan"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txtKeteranganPekerjaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Penelitian"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnEditPekerjaan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNamaPekerjaan" />

    <TextView
        android:id="@+id/txtSemesterPekerjaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:text="Ganjil"
        app:layout_constraintBottom_toTopOf="@+id/vieww"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtKeteranganPekerjaan" />

    <ImageView
        android:id="@+id/btnEditPekerjaan"
        android:layout_width="35dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnHapusPekerjaan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtNamaPekerjaan"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_logo" />

    <ImageView
        android:id="@+id/btnHapusPekerjaan"
        android:layout_width="35dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDetailPekerjaan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnEditPekerjaan"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete_logo" />

    <ImageView
        android:id="@+id/btnDetailPekerjaan"
        android:layout_width="33dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHapusPekerjaan"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_logo" />

    <View
        android:id="@+id/vieww"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/abu_tua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>